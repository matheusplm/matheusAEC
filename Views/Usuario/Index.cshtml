@model AEC.Models.UsuarioModel

<h1>Perfil do Usuário</h1>

<div>
    <h3>Informações do Usuário</h3>
    <p><strong>Nome:</strong> @Model.Nome</p>
    <p><strong>Usuário:</strong> @Model.Usuario</p>
</div>

<h3>Editar Nome</h3>
<form asp-action="UpdateName" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Nome">Novo Nome</label>
        <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar Nome</button>
</form>

<h3>Alterar Senha</h3>
<form asp-action="UpdatePassword" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Senha Atual</label>
        <input type="password" name="SenhaAtual" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Nova Senha</label>
        <input type="password" name="NovaSenha" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Confirme a Nova Senha</label>
        <input type="password" name="ConfirmacaoSenha" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Atualizar Senha</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
