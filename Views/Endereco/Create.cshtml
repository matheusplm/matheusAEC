@model AEC.Models.EnderecoModel

@{
    ViewData["Title"] = "Criar Endereço";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Criar Endereço</h2>

        <form asp-action="Create" id="enderecoForm">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CEP"></label>
                    <input asp-for="CEP" id="cep" class="form-control" required />
                    <span asp-validation-for="CEP" class="validation-message"></span>
                    <span id="cepError" class="text-danger" style="display:none;"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Numero"></label>
                    <input asp-for="Numero" class="form-control" required />
                    <span asp-validation-for="Numero" class="validation-message"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro"></label>
                <input asp-for="Logradouro" id="logradouro" class="form-control" required disabled />
                <span asp-validation-for="Logradouro" class="validation-message"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Bairro"></label>
                    <input asp-for="Bairro" id="bairro" class="form-control" required disabled />
                    <span asp-validation-for="Bairro" class="validation-message"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Cidade"></label>
                    <input asp-for="Cidade" id="cidade" class="form-control" required disabled />
                    <span asp-validation-for="Cidade" class="validation-message"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UF"></label>
                    <input asp-for="UF" id="uf" class="form-control" required disabled />
                    <span asp-validation-for="UF" class="validation-message"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Complemento"></label>
                    <input asp-for="Complemento" class="form-control" />
                    <span asp-validation-for="Complemento" class="validation-message"></span>
                </div>
            </div>
            <div class="text-end mt-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#cep').mask('00000-000');

            $('#cep').on('input', function () {
                var cep = $(this).val().replace(/\D/g, '');
                if (cep.length === 8) {
                    $('input').prop('disabled', true);
                    $.getJSON('https://viacep.com.br/ws/' + cep + '/json/', function (data) {
                        if (!data.erro) {
                            $('#logradouro').val(data.logradouro).prop('disabled', false);
                            $('#bairro').val(data.bairro).prop('disabled', false);
                            $('#cidade').val(data.localidade).prop('disabled', false);
                            $('#uf').val(data.uf).prop('disabled', false);
                            $('#cepError').hide();
                        } else {
                            $('#cepError').text('CEP não encontrado!').show();
                            $('#logradouro').val('').prop('disabled', true);
                            $('#bairro').val('').prop('disabled', true);
                            $('#cidade').val('').prop('disabled', true);
                            $('#uf').val('').prop('disabled', true);
                        }
                    }).fail(function () {
                        $('#cepError').text('Erro ao buscar o CEP. Tente novamente.').show();
                        $('#logradouro').val('').prop('disabled', true);
                        $('#bairro').val('').prop('disabled', true);
                        $('#cidade').val('').prop('disabled', true);
                        $('#uf').val('').prop('disabled', true);
                    }).always(function () {
                        $('input').prop('disabled', false);
                    });
                } else {
                    $('#logradouro').val('').prop('disabled', true);
                    $('#bairro').val('').prop('disabled', true);
                    $('#cidade').val('').prop('disabled', true);
                    $('#uf').val('').prop('disabled', true);
                    $('#cepError').hide();
                }
            });

            $('#enderecoForm').on('submit', function () {
                var cepValue = $('#cep').val().replace(/\D/g, '');
                $('#cep').val(cepValue);
            });
        });
    </script>
}

<style>
    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        height: 100vh;
        background-color: #f8f9fa;
    }

    .login-box {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        text-align: left;
    }

    .login-title {
        font-size: 1.75rem;
        margin-bottom: 1rem;
        color: #333;
        text-align: center;
    }

    .form-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .form-group {
        flex: 1;
        margin-right: 1rem;
    }

        .form-group:last-child {
            margin-right: 0;
        }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-end {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 1rem;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    .validation-message {
        color: #dc3545;
        font-size: 0.9rem;
    }
</style>
