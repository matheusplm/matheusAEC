@model IEnumerable<AEC.Models.EnderecoModel>

@{
    ViewData["Title"] = "Endereços";
}

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Endereços</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CEP</th>
                    <th>Rua</th>
                    <th>Complemento</th>
                    <th>Bairro</th>
                    <th>Cidade</th>
                    <th>UF</th>
                    <th>Número</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var endereco in Model)
                {
                    <tr>
                        <td>@endereco.Id</td>
                        <td>@endereco.CEP</td>
                        <td>@endereco.Logradouro</td>
                        <td>@endereco.Complemento</td>
                        <td>@endereco.Bairro</td>
                        <td>@endereco.Cidade</td>
                        <td>@endereco.UF</td>
                        <td>@endereco.Numero</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@endereco.Id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-id="@endereco.Id" class="btn btn-danger btn-sm">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <a asp-action="Create" class="btn btn-primary">Adicionar Endereço</a>
            <a asp-action="ExportToCsv" class="btn btn-secondary">Exportar para CSV</a>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        height: 100vh;
        background-color: #f8f9fa;
    }

    .login-box {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 800px;
        text-align: left;
    }

    .login-title {
        font-size: 1.75rem;
        margin-bottom: 1rem;
        color: #333;
        text-align: center;
    }

    .table {
        width: 100%;
        margin-top: 1rem;
        table-layout: auto;
    }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 5px;
    }

    .text-end {
        margin-top: 1rem;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }
</style>
